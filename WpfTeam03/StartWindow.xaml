<Window x:Class="WpfTeam03.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTeam03"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Header="Student" Name="mnuStudent" Click="mnuStudent_Click"></MenuItem>
                    <MenuItem Header="Close" Name="mnuClose"></MenuItem>
                </MenuItem>
            </Menu>
            <StatusBar DockPanel.Dock="Bottom"></StatusBar>
            <ListBox>
                <Label Content="StudentRepository.cs toe te voegen"></Label>
            </ListBox>
        </DockPanel>
    </Grid>
</Window>
